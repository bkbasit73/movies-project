<div class="row">
  <div class="col-md-4">
    <% if (movie.posterUrl) { %>
    <img src="<%= movie.posterUrl %>" class="img-fluid rounded mb-3" alt="<%= movie.name %>">
    <% } else { %>
    <img src="https://via.placeholder.com/400x600?text=No+Poster" class="img-fluid rounded mb-3">
    <% } %>
  </div>

  <div class="col-md-8">
    <h1 class="mb-3"><%= movie.name %></h1>

    <p class="text-muted mb-1"><strong>Year:</strong> <%= movie.year %></p>
    <p class="text-muted mb-1"><strong>Genres:</strong> <%= movie.genres.join(', ') %></p>
    <p class="text-muted mb-3"><strong>Rating:</strong> <%= movie.rating %>/10</p>

    <p class="mb-4"><%= movie.description %></p>

    <% if (movie.owner) { %>
    <p class="mt-3"><small>Added by <%= movie.owner.name %></small></p>
    <% } %>

    <% if (isOwner) { %>
    <a href="/movies/<%= movie._id %>/edit" class="btn btn-outline-primary me-2">Edit</a>

    <form action="/movies/<%= movie._id %>/delete" method="post" class="d-inline">
      <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Delete this movie?')">
        Delete
      </button>
    </form>
    <% } %>
  </div>
</div>
