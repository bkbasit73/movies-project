<h1 class="mb-4">All Movies</h1>

<div class="row">
  <% if (movies && movies.length) { %>
    <% movies.forEach(function(movie) { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        
        <% if (movie.posterUrl) { %>
        <img src="<%= movie.posterUrl %>" class="card-img-top" alt="<%= movie.name %>">
        <% } else { %>
        <img src="https://via.placeholder.com/400x600?text=No+Poster" class="card-img-top">
        <% } %>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= movie.name %></h5>

          <p class="card-text text-muted mb-1"><%= movie.year %></p>

          <p class="card-text flex-grow-1">
            <%= movie.description.length > 100 
                ? movie.description.substring(0, 100) + '...' 
                : movie.description %>
          </p>

          <p class="card-text">
            <strong>Rating:</strong> <%= movie.rating %>/10
          </p>

          <a href="/movies/<%= movie._id %>" class="btn btn-outline-primary mt-2">
            View Details
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  <% } else { %>
    <p>No movies found.</p>
  <% } %>
</div>
